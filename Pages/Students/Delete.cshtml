@page
@model StudentManagementApp.Pages.Students.DeleteModel
@{
}
<h2>Delete Student</h2>
<p>Are you sure you want to delete this student?</p>

<form method="post">
    <input type="hidden" asp-for="Student.ID" />
    <div class="mb-3">
        <label>Name:</label>
        <input asp-for="Student.Name" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label>Age:</label>
        <input asp-for="Student.Age" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label>Course:</label>
        <input asp-for="Student.Course" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>